{% extends 'base.html.twig' %}

{% block title %}Accueil Ubique
{% endblock %}
{% block stylesheets %}
	<link rel="stylesheet" href="/css/iconographique.css">
{% endblock %}
{% block body %}

	<div class="container accueil-bg m-auto">

		{% if app.user %}

			<div class="mb-3 Magazine">
				<h3>
					{{magazine.codeAffaireEnClair}}
				</h3>
			</div>
			<div class="container">
				<h1 class='text-center'>Redachef</h1>
				<table class="table table-bordered table-dark">
					<thead>
						<tr>
							<th scope="col">Nom d'usage</th>
							<th scope="col">Nom compta</th>
							<th scope="col">Statut</th>
							<th scope="col">Type</th>
							<th scope="col">Article</th>
							<th scope="col">Signe</th>
							<th scope="col">Nombre de feuillet</th>
							<th scope="col">Forfait</th>
							<th scope="col">Prix au feuillet</th>
							<th scope="col">Montant</th>
							<th scope="col">Droit d'auteur</th>

						</tr>
					</thead>
					<tbody>


						<tr>
							{% for aRedachef in redachef %}
								<td>{{ aRedachef.salarieEtEntreprise.nomDUsage }}</td>
								<td>{{ aRedachef.salarieEtEntreprise.nomCompta }}</td>
								<td>{{ aRedachef.salarieEtEntreprise.statut }}</td>
								<td>{{ aRedachef.salarieEtEntreprise.type }}</td>
								<td>{{ aRedachef.article }}</td>
								<td>{{ aRedachef.signe }}</td>
								<td>{{ aRedachef.nbDeFeuillet }}</td>
								<td>{{ aRedachef.forfait }}</td>
								<td>{{ aRedachef.prixAuFeuillet }}</td>
								<td>{{ aRedachef.montant }}</td>
								<td>{{ aRedachef.salarieEtEntreprise.droitAuteur }}</td>

							{% endfor %}
						</tr>
						<tr class="text-center add-row">
							<td colspan="11">
								<span>+</span>
							</td>
						</tr>
					</tbody>
				</table>
			</div>
		{% endif %}
	</div>
{% endblock %}
